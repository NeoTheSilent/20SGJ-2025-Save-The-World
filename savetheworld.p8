--qte

function qte(num,rep)
--
 if distance[num]==player.d then
  qtetimer=0
 elseif distance[num]<player.d and rep[#rep]!=0 then
  for i=1,#rep do
   if active<i then
	   sspr(0+((flr(qtetimer/4)*8)*(tonum(active+1==i))),
	   24,8,8,(player.x-4)+(i*16)
	   -(ceil(#rep/2)*16)-(8-(#rep%2)*8),
	   player.y-30,16,16)
	   print(answerkey[rep[i]],(player.x+1)+(i*16)
	   -(ceil(#rep/2)*16)-(8-(#rep%2)*8),
	   player.y-25)
	  end
	 end
--if
	 if btnp(rep[active+1]) then
	  if active!=#rep then
    set(rep)
	  end
	 else
		 for i=2,5 do
	   if (btnp(i) and i!=rep[active+1])
	   or qtetimer>=60 then
					trip(rep)
					rest(rep)
	   end
	  end
	 end
  
  if active==#rep then
   rest(rep)
  end
	end
end

function set()
 active+=1
	qtetimer=0
end

function rest(rep)
 active=0
 rep[#rep]=0
end

function trip(rep)
 stumble=true
	stumbletimer+=30*(#rep-active)
	qtetimer=0
end
