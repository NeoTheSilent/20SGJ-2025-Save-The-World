--movement

function move()
 if player.x!=172 then
	 if btn(1) and not stumble then
	  if player.x==120 
	  and player.d<distance[5] then
	   player.d+=4
	  elseif active==0 then
		  player.x+=player.m
		 end
	 elseif btn(0) then
	  if player.d>0  then
	   player.d-=4
	  elseif player.x>16 then
	   player.x-=player.m
	  end
	 end
	end
end
